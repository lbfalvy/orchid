# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Set default charset
[*.{rs,md,toml,orc,tex,bib}]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 2

[Makefile]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_styl = tab